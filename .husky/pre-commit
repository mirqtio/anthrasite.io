#!/bin/bash

# Check for secrets first
echo "ğŸ” Checking for secrets..."
./scripts/check-secrets.sh
if [ $? -ne 0 ]; then
  echo "âŒ Secret check failed! Please remove any hardcoded secrets."
  exit 1
fi

# Run lint-staged
npx lint-staged
if [ $? -ne 0 ]; then
  echo "âŒ Lint-staged failed!"
  exit 1
fi

# Run comprehensive checks (typecheck + lint + unit tests)
echo "ğŸ” Running all checks..."
pnpm check:all
if [ $? -ne 0 ]; then
  echo "âŒ Checks failed!"
  exit 1
fi

echo "âœ… All pre-commit checks passed!"
