FROM node:20-alpine

WORKDIR /app

# Install dependencies for native modules
RUN apk add --no-cache \
    python3 \
    make \
    g++ \
    cairo-dev \
    pango-dev \
    giflib-dev \
    jpeg-dev

# Copy package files
COPY package*.json ./

# Copy Prisma schema (needed for postinstall hook)
COPY prisma/ ./prisma/

# Install dependencies
RUN npm install

# Copy application files
COPY . .

# Generate Prisma client
RUN npx prisma generate

# Expose port
EXPOSE 3333

# Start dev server
CMD ["npm", "run", "dev"]
