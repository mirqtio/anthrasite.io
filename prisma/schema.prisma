// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Manually defined based on Supabase introspection

model leads {
  id        Int      @id @default(autoincrement())
  company   String
  domain    String?
  email     String?
  reports   reports[]
}

model reports {
  id          Int      @id @default(autoincrement())
  lead_id     Int
  lead        leads    @relation(fields: [lead_id], references: [id])
  created_at  DateTime @default(now())
  sales       sales[]
}

model sales {
  id                       Int      @id @default(autoincrement())
  report_id                Int      @unique // Constraint: sales_report_id_key
  report                   reports  @relation(fields: [report_id], references: [id])
  stripe_payment_intent_id String   @unique // Constraint: sales_stripe_payment_intent_id_key
  amount_cents             Int
  currency                 String
  status                   String
  customer_email           String?
  metadata                 Json?
  created_at               DateTime @default(now())
  updated_at               DateTime @updatedAt
}

// Missing models required by legacy API routes and seed script
model Business {
  id          String   @id @default(cuid())
  domain      String
  name        String
  email       String?
  reportData  Json
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  utmTokens      UtmToken[]
  purchases      Purchase[]
  abandonedCarts AbandonedCart[]
}

model WaitlistEntry {
  id          Int      @id @default(autoincrement())
  domain      String
  email       String
  ipLocation  Json?
  variantData Json?
  createdAt   DateTime @default(now())
}

model UtmToken {
  id         Int      @id @default(autoincrement())
  nonce      String   @unique
  token      String   @unique
  businessId String
  business   Business @relation(fields: [businessId], references: [id])
  expiresAt  DateTime
  used       Boolean  @default(false)
  usedAt     DateTime?
  createdAt  DateTime @default(now())
}

model Purchase {
  id                    String   @id @default(cuid())
  businessId            String
  business              Business @relation(fields: [businessId], references: [id])
  stripeSessionId       String   @unique
  stripePaymentIntentId String?  @unique
  amount                Int
  status                String
  currency              String?
  customerEmail         String?
  metadata              Json?
  utmToken              String?
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}

model AbandonedCart {
  id                String    @id @default(cuid())
  stripeSessionId   String    @unique
  businessId        String
  business          Business  @relation(fields: [businessId], references: [id])
  customerEmail     String?
  amount            Int
  currency          String
  recoveryToken     String    @unique
  recoveryEmailSent Boolean   @default(false)
  emailSentAt       DateTime?
  recovered         Boolean   @default(false)
  recoveredAt       DateTime?
  sessionExpiresAt  DateTime
  utmToken          String?
  createdAt         DateTime  @default(now())
}

model PrivacyRequest {
  id          String   @id @default(cuid())
  trackingId  String   @default(cuid())
  email       String
  requestType String
  dueDate     DateTime
  status      String   @default("pending")
  createdAt   DateTime @default(now())
}

model AnalyticsEvent {
  id         Int      @id @default(autoincrement())
  eventName  String
  properties Json
  sessionId  String?
  createdAt  DateTime @default(now())
}