// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Manually defined based on Supabase introspection

model leads {
  id        Int      @id @default(autoincrement())
  company   String
  domain    String?
  email     String?
  reports   reports[]
}

model reports {
  id          Int      @id @default(autoincrement())
  lead_id     Int
  lead        leads    @relation(fields: [lead_id], references: [id])
  created_at  DateTime @default(now())
  sales       sales[]
}

model sales {
  id                       Int      @id @default(autoincrement())
  report_id                Int      @unique // Constraint: sales_report_id_key
  report                   reports  @relation(fields: [report_id], references: [id])
  stripe_payment_intent_id String   @unique // Constraint: sales_stripe_payment_intent_id_key
  amount_cents             Int
  currency                 String
  status                   String
  customer_email           String?
  metadata                 Json?
  created_at               DateTime @default(now())
  updated_at               DateTime @updatedAt
}

// Missing models required by legacy API routes and seed script
// Missing models removed as they are WIP artifacts not in DB
// Waitlist Model (Live Feature)
model WaitlistEntry {
  id          Int      @id @default(autoincrement())
  domain      String
  email       String
  ipLocation  Json?
  variantData Json?
  createdAt   DateTime @default(now())
}

// VoC Survey Response Model (ANT-691)
model VocSurveyResponse {
  id             String   @id @default(uuid())
  landingTokenId String?  @map("landing_token_id")
  leadId         String?  @map("lead_id")
  answer         String?  // null if dismissed
  otherText      String?  @map("other_text")
  triggerType    String   @map("trigger_type")
  secondsOnPage  Int      @map("seconds_on_page")
  dismissed      Boolean  @default(false)
  ipAddress      String?  @map("ip_address")
  createdAt      DateTime @default(now()) @map("created_at")

  @@map("voc_survey_responses")
}